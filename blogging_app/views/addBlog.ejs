<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container">
        <form method="post" action="/blogs" enctype="multipart/form-data">
            <div class="mb-3 mt-4">
                <label for="title" class="form-label">Blog Title</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Enter blog title">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Blog Content</label>
                <textarea class="form-control" id="body" name="body" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="coverImage" class="form-label">Blog Cover Image</label>
                <input type="file" class="form-control" name="coverImage" id="coverImage" placeholder="Enter blog title">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>